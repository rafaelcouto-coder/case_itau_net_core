@page
@model CaseItau.Web.Pages.Fundo.CreateModel

@{
    ViewData["Title"] = "Create";
}

<div class="row">
    <div class="col-md-8 mx-auto rounded p-3">
        <h1 class="text-center mb-5">Novo fundo</h1>
        <form method="post" enctype="multipart/form-data">


            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Codigo</label>
                <div class="col-sm-8">
                    <input asp-for="CreateFundosRequest.Codigo" class="form-control" />
                    <span asp-validation-for="CreateFundosRequest.Codigo" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Nome</label>
                <div class="col-sm-8">
                    <input asp-for="CreateFundosRequest.Nome" class="form-control" />
                    <span asp-validation-for="CreateFundosRequest.Nome" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Cnpj</label>
                <div class="col-sm-8">
                    <input asp-for="CreateFundosRequest.Cnpj" class="form-control" type="tel" maxlength="14" pattern="\d*" />
                    <span asp-validation-for="CreateFundosRequest.Cnpj" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">TipoFundo</label>
                <div class="col-sm-8">

                    <span asp-validation-for="CreateFundosRequest.TipoFundo" class="text-danger"></span>
                    <select class="form-select" asp-for="CreateFundosRequest.TipoFundo">
                        <option value="RendaFixa">Renda Fixa</option>
                        <option value="Acoes">Acoes</option>
                        <option value="MultiMercado">Multi Mercado</option>
                    </select>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Patrimonio</label>
                <div class="col-sm-8">
                    <input asp-for="CreateFundosRequest.Patrimonio" class="form-control" type="number" step="0.1" />
                    <span asp-validation-for="CreateFundosRequest.Patrimonio" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <div class="offset-md-4 col-sm-4 d-grid">
                    <button type="submit" class="btn btn-primary">
                        Salvar
                    </button>
                </div>
                <div class="col-sm-4 d-grid">
                    <a class="btn btn-outline-primary" href="../Index" role="button">Voltar</a>
                </div>
            </div>
        </form>
    </div>
</div>

@if (Model.ErrorMessage != null)
{
    <div class="alert alert-danger mt-3" role="alert">
        <strong>Error:</strong> @Model.ErrorMessage.Name - @Model.ErrorMessage.Code
    </div>
}
